<resources>

    <style name="StandardLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- texts -->
    <style name="BigInputText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="BaseText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StdText" parent="BaseText">
        <item name="android:gravity">center</item>
    </style>

    <style name="Info" parent="StdText">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:maxWidth">400dp</item>
    </style>

    <style name="MarginInfo" parent="Info">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <!-- transparent buttons -->
    <style name="TransButton" parent="Info">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <!-- overall theme style -->
    <style name="NoBar" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_dark</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="LiteBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
    </style>

</resources>