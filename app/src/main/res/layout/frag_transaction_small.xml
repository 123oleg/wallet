<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingTop="10dp" android:paddingBottom="15dp"
    android:layout_height="wrap_content" android:layout_width="fill_parent">

    <LinearLayout style="@style/TransactionLayout">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/OneLinerText"
            android:id="@+id/transactSum"/>

        <TextView
            android:maxLines="1"
            style="@style/StdText"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/transactWhen"/>

        <ImageView
            android:layout_width="24dp"
            android:id="@+id/transactCircle"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout style="@style/TransactionLayout">

        <TextView
            style="@style/OneLinerText"
            android:id="@+id/feeAmount"
            android:textColor="#FF777777"
            android:layout_width="wrap_content"/>

        <TextView
            android:gravity="end"
            android:id="@+id/address"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/OneLinerText"/>

    </LinearLayout>
</LinearLayout>