<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingTop="12dp" android:paddingBottom="14dp"
    android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">

    <TextView
        android:maxLines="1"
        style="@style/BaseText"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:id="@+id/transactSum"/>

    <TextView
        android:maxLines="1"
        style="@style/StdText"
        android:layout_weight="12"
        android:layout_width="0dp"
        android:id="@+id/transactWhen"/>

    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/transactCircle"
        android:layout_height="wrap_content"/>

</LinearLayout>