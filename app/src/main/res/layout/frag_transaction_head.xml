<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
    android:layout_width="fill_parent" android:paddingBottom="20dp" android:paddingTop="20dp"
    android:paddingLeft="10dp" android:paddingRight="10dp">

    <info.hoang8f.android.segmented.SegmentedGroup
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/inputType">

        <RadioButton
            android:textSize="18sp"
            android:id="@+id/amtInBtc"
            android:text="@string/input_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RadioButton"/>

        <RadioButton
            android:textSize="18sp"
            android:id="@+id/amtInSat"
            android:text="@string/input_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RadioButton"/>

    </info.hoang8f.android.segmented.SegmentedGroup>

    <TextView
        style="@style/StdText"
        android:id="@+id/txsNumber"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>