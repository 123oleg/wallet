<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" style="@style/TransactionLayout"
    android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingTop="8dp" android:paddingBottom="11dp">

    <TextView
        android:layout_weight="6"
        android:layout_width="0dp"
        style="@style/OneLinerText"
        android:id="@+id/transactSum"/>

    <TextView
        android:id="@+id/address"
        android:layout_weight="12"
        android:layout_width="0dp"
        style="@style/OneLinerText"/>

    <TextView
        android:gravity="center"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:id="@+id/feeAmount"
        style="@style/OneLinerText"
        android:textColor="#FF777777"/>

    <TextView
        style="@style/StdText"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:id="@+id/transactWhen"/>

    <TextView
        style="@style/StdText"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:textColor="#FF777777"
        android:id="@+id/transactStatus"/>

    <ImageView
        android:layout_width="24dp"
        android:id="@+id/transactCircle"
        android:layout_height="wrap_content"/>

</LinearLayout>